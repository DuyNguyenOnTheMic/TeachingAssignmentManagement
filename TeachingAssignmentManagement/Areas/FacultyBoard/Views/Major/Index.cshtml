@{
    ViewBag.Title = "Quản lý ngành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <h2>Quản lý ngành</h2>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic table -->
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Term")"><i class="feather feather-calendar"></i> Học kỳ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" href="@Url.Action("Index", "Major")"><i class="feather feather-list"></i> Ngành</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="card-datatable table-responsive pt-0">
                                        <table class="table" id="tblMajor">
                                            <thead class="table-light">
                                                <tr>
                                                    <th></th>
                                                    <th>Mã ngành</th>
                                                    <th>Tên ngành</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!--/ Basic table -->
        </div>
    </div>
</div>

<div id="loader" data-request-url="@Url.Content("~/")"></div>

@section styles {
    <link href="~/app-assets/vendors/css/tables/datatable/buttons.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/app-assets/vendors/css/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/app-assets/vendors/js/tables/datatable/datatables.buttons.min.js"></script>
    @Scripts.Render("~/bundles/export-dt")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/app-assets/vendors/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/app-assets/vendors/js/signalr/jquery.signalR.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/assets/js/faculty-board/major/major.min.js"></script>
}