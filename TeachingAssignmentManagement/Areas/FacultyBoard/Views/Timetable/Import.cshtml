@{
    ViewBag.Title = "Import thời khoá biểu";
}

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <h3>Quản lý TKB</h3>
            </div>
        </div>
        <div class="content-body">
            <!-- Dropzone section start -->
            <section>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Import TKB</h4>
                            </div>
                            <div class="card-body">
                                <form action="#" class="dropzone dropzone-area" id="dpz-single-file">
                                    <div class="dz-message">Drop files here or click to upload.</div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Dropzone section end -->
        </div>
    </div>
</div>

@section styles {
    <link href="~/app-assets/vendors/css/file-uploaders/dropzone.css" rel="stylesheet" />
    <link href="~/app-assets/css/plugins/forms/form-file-uploader.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/app-assets/vendors/js/file-uploaders/dropzone-min.js"></script>
    <script src="~/app-assets/js/scripts/forms/form-file-uploader.js"></script>
}