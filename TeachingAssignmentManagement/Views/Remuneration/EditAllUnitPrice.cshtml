@{
    Layout = null;
}

@using (Html.BeginForm("EditAllUnitPrice", "Remuneration", FormMethod.Post, new { onsubmit = "return submitForm(this)", id = "unitprice-form" }))
{
    <div class="alert alert-primary py-2 mt-1 mb-2" role="alert">
        <div class="alert-body"><b><i class="feather feather-help-circle"></i> Hướng dẫn: </b>Chức năng này sẽ giúp bạn tự động cập nhật đơn giá cho tất cả các cấp bậc trong năm học.</div>
    </div>

    @Html.Hidden("type")
    @Html.Hidden("startYear")
    @Html.Hidden("endYear")

    <div class="mb-1">
        <label class="form-label font-small-4" for="price">Đơn giá: </label>
        <input type="text" class="form-control" id="price" name="price" placeholder="Nhập đơn giá" aria-label="Nhập đơn giá" />
    </div>

    <div class="float-end m-1">
        <button type="button" class="btn btn-outline-secondary waves-effect me-1" id="btnClose">Huỷ</button>
        <button type="submit" class="btn btn-primary waves-effect waves-float waves-light">Lưu</button>
    </div>
}

<link href="~/app-assets/css/plugins/forms/form-validation.min.css" rel="stylesheet" />
<script src="~/assets/js/form-loader.js"></script>