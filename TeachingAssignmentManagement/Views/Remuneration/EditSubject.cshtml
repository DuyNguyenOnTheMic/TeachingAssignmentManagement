@model TeachingAssignmentManagement.Models.subject

@{
    Layout = null;
}

@using (Html.BeginForm("EditSubject", "Remuneration", FormMethod.Post, new { onsubmit = "return submitForm(this)", id = "subject-form" }))
{
    @Html.HiddenFor(model => model.id)

    <div class="mb-1">
        <label class="form-label font-small-4" for="subject_id">Mã môn học: </label>
        <p class="form-control-static" id="subject_id">@Model.subject_id</p>
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4" for="name">Tên môn học: </label>
        <p class="form-control-static" id="name">@Model.name</p>
    </div>

    <div class="float-end m-1">
        <button type="button" class="btn btn-outline-secondary waves-effect me-1" id="btnClose">Huỷ</button>
        <button type="submit" class="btn btn-primary waves-effect waves-float waves-light">Lưu</button>
    </div>
}

<link href="~/app-assets/css/plugins/forms/form-validation.min.css" rel="stylesheet" />
<script src="~/assets/js/form-loader.min.js"></script>