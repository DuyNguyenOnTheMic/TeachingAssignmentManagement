@model TeachingAssignmentManagement.Models.coefficient
@using System.Globalization

@{
    Layout = null;
}

@using (Html.BeginForm("EditCoefficient", "Remuneration", FormMethod.Post, new { onsubmit = "return submitForm(this)", id = "coefficient-form" }))
{
    @Html.HiddenFor(model => model.id)

    <div class="row justify-content-center mb-1">
        <div class="col-4 mx-auto">
            <label class="form-label font-small-4" for="vietnamese_coefficient">Hệ số tiếng Việt: </label>
            <div class="input-group">
                <input type="text" class="touchspin" id="vietnamese_coefficient" name="vietnamese_coefficient" value="@Model.vietnamese_coefficient.ToString(CultureInfo.InvariantCulture)" data-bts-step="0.1" data-bts-decimals="2" aria-label="Nhập hệ số tiếng Việt" />
            </div>
        </div>
        <div class="col-4 mx-auto">
            <label class="form-label font-small-4" for="foreign_coefficient">Hệ số tiếng Anh: </label>
            <div class="input-group">
                <input type="text" class="touchspin" id="foreign_coefficient" name="foreign_coefficient" value="@Model.foreign_coefficient.ToString(CultureInfo.InvariantCulture)" data-bts-step="0.1" data-bts-decimals="2" aria-label="Nhập hệ số tiếng Anh" />
            </div>
        </div>
    </div>

    <div class="row justify-content-center mb-50">
        <div class="col-4 mx-auto">
            <label class="form-label font-small-4" for="theoretical_coefficient">Hệ số lý thuyết: </label>
            <div class="input-group">
                <input type="text" class="touchspin" id="theoretical_coefficient" name="theoretical_coefficient" value="@Model.theoretical_coefficient.ToString(CultureInfo.InvariantCulture)" data-bts-step="0.1" data-bts-decimals="2" aria-label="Nhập hệ số LT" />
            </div>
        </div>
        <div class="col-4 mx-auto">
            <label class="form-label font-small-4" for="practice_coefficient">Hệ số thực hành: </label>
            <div class="input-group">
                <input type="text" class="touchspin" id="practice_coefficient" name="practice_coefficient" value="@Model.practice_coefficient.ToString(CultureInfo.InvariantCulture)" data-bts-step="0.1" data-bts-decimals="2" aria-label="Nhập hệ số TH" />
            </div>
        </div>
    </div>

    <div class="float-end m-1">
        <button type="button" class="btn btn-outline-secondary waves-effect me-1" id="btnClose">Huỷ</button>
        <button type="submit" class="btn btn-primary waves-effect waves-float waves-light">Lưu</button>
    </div>
}

<link href="~/app-assets/css/plugins/forms/form-validation.min.css" rel="stylesheet" />
<script src="~/assets/js/form-loader.js"></script>