@model IEnumerable<TeachingAssignmentManagement.Models.subject>

<div class="card-datatable">
    <table class="datatables-ajax table table-responsive" id="tblSubject">
        <thead class="table-light">
            <tr>
                <th></th>
                <th>Mã môn học</th>
                <th>Tên môn học</th>
                <th>Tiếng Việt</th>
                <th>Hệ số LT</th>
                <th>Hệ số TH</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.subject_id</td>
                    <td>@item.name</td>
                    <td>@item.is_vietnamese</td>
                    <td>@item.theoretical_coefficient</td>
                    <td>@item.practice_coefficient</td>
                    <td><a class='editRow text-success p-0' data-original-title='Chỉnh sửa' title='Chỉnh sửa' onclick=popupForm('')><i class='feather feather-edit font-medium-3 me-1'></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>