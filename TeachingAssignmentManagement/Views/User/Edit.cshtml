@model TeachingAssignmentManagement.Models.lecturer

@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { onsubmit = "return submitForm(this)", id = "user-form" }))
{
    @Html.HiddenFor(model => model.id)

    <div class="mb-1">
        <label class="form-label font-small-4" for="staff_id">Mã giảng viên: </label>
        @Html.EditorFor(model => model.staff_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mã giảng viên", @aria_label = "Nhập mã giảng viên" } })
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4" for="full_name">Tên giảng viên: </label>
        @Html.EditorFor(model => model.full_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên giảng viên", @aria_label = "Nhập tên giảng viên" } })
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4" for="email">Email: </label>
        <input type="text" class="form-control" id="email" name="email" placeholder="Nhập email" aria-label="Nhập email" value="@ViewData["email"]" />
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4" for="role_id">Loại giảng viên: </label>
        <small class="text-muted"><i>(Giảng viên cơ hữu hoặc giảng viên thỉnh giảng)</i></small>
        @Html.DropDownList("type", null, "---- Chọn loại giảng viên ----", htmlAttributes: new { @class = "form-data form-select", @aria_label = "Chọn loại giảng viên" })
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4" for="role_id">Role: </label>
        @Html.DropDownList("role_id", null, "---- Chọn role ----", htmlAttributes: new { @class = "form-data form-select", @aria_label = "Chọn role" })
    </div>

    <div class="mb-1">
        <label class="form-label font-small-4 mb-50" for="is_vietnamese">Quốc tịch: </label>
        <small class="text-muted"><i>(Bỏ chọn nếu giảng viên không phải người Việt)</i></small>
        <div class="form-check form-check-inline">
            @Html.CheckBox("is_vietnamese", Model.is_vietnamese ?? true, new { @class = "form-check-input" })
            <label class="form-check-label" for="is_vietnamese">Tiếng Việt</label>
        </div>
    </div>

    <div class="float-end m-1">
        <button type="button" class="btn btn-outline-secondary waves-effect me-1" id="btnClose">Huỷ</button>
        <button type="submit" class="btn btn-primary waves-effect waves-float waves-light">Lưu</button>
    </div>
}

<link href="~/app-assets/css/plugins/forms/form-validation.min.css" rel="stylesheet" />
<script src="~/assets/js/form-loader.min.js"></script>